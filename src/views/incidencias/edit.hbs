<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto" align="center">
            <span><b>Incidencia # {{incidencias.id}}</b></span>
            <br>
            <br>
            <div class="card">
                <div class="card-body">
                    <form action="/incidencias/edit/{{incidencias.id}}" method="POST" class="form-row">

                        <div class="form-group col-6">
                            <span><b>Título</b></span>
                            <input type="text" value="{{incidencias.nombre_incidencia}}" class="form-control"
                                name="nombre_incidencia" placeholder="Nombre incidencia" autofocus>
                        </div>
                        <div class="form-group col-6">
                            <span><b>Categoría</b></span>
                            <input type="text" value="{{incidencias.categoria_incidencia}}" class="form-control"
                                name="categoria_incidencia" placeholder="Categoria">
                        </div>
                        <div class="form-group col-6">
                            <span><b>Prioridad</b></span>
                            <select class="mdb-select custom-select" name="prioridad_incidencia">
                                <option value="{{incidencias.prioridad_incidencia}}" selected hidden>
                                    {{incidencias.prioridad_incidencia}}</option>
                                <option value="Baja">Baja</option>
                                <option value="Media">Media</option>
                                <option value="Alta">Alta</option>
                            </select>
                        </div>
                        <div class="form-group" style="display: none">
                            <select class="mdb-select custom-select" name="usuario_creador">
                                <option value='{{user.nombre_usuario}}' selected></option>
                            </select>
                        </div>
                        {{#if user.tecnico}}
                        <div class="form-group col-6">
                            <span><b>Estado</b></span>
                            <select class="mdb-select custom-select" name="estado_incidencia">
                                <option value="{{incidencias.estado_incidencia}}" selected hidden>
                                    {{incidencias.estado_incidencia}}</option>
                                <option value="Pendiente">Pendiente</option>
                                <option value="Abierta">Abierta</option>
                                <option value="Cerrada">Cerrada</option>
                            </select>
                        </div>

                        <div class="form-group col-6">
                            <span><b>Comentarios del técnico</b></span>
                            <textarea class="form-control" rows="2" placeholder="Comentarios"
                                name="comentarios">{{incidencias.comentarios}}</textarea>
                        </div>
                        {{/if}}
                        <div class="form-group col-6">
                            <span><b>Descripción</b></span>
                            <textarea class="form-control" rows="2" placeholder="Descripcion"
                                name="descripcion">{{incidencias.descripcion}}</textarea>
                        </div>
                        <div class="form-group col-12">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-1"></div>
        <div class="form-group col-12" align="center" style="float: left; width:50%">
            <span><b>Comentarios del técnico</b></span>
            <br>
            <br>
            <div class="card">
                <span>
                    {{incidencias.comentarios}}
                </span>
            </div>
            <div class="container p-4">
                <div class="row">
                    <div class="col-12">
                        <span><b>Registros</b></span>
                        <br><br>
                        <div class="card scrollsito">
                            <div class="card-body">
                                <div id="content">
                                    <ul class="timeline">
                                        <li class="event" data-date="12:30 - 1:00pm">
                                            <h3>Proceso 1</h3>
                                            <p>Encargado
                                            </p>
                                        </li>
                                        <li class="event" data-date="2:30 - 4:00pm">
                                            <h3>Proceso 2</h3>
                                            <p>desc 2.</p>
                                        </li>
                                        <li class="event" data-date="5:00 - 8:00pm">
                                            <h3>Proceso 3</h3>
                                            <p>desc 3</p>
                                        </li>
                                        <li class="event" data-date="8:30 - 9:30pm">
                                            <h3>Proceso 4</h3>
                                            <p>desc 4</p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>
</div>