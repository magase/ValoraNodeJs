<div class="container p-4">
    <div class="row">
        {{#each incidencias}}
        <div class="col-md-4">
            <div class="card text-center">
                <div class="car-body">
                    <a href="{{nombre_incidencia}}">
                        <h3 class="card-title text-uppercase">
                            {{nombre_incidencia}}
                        </h3>
                    </a>
                    <p class="m-2">
                        {{descripcion}}
                    </p>
                    <p>
                        {{timeago fecha_creacion}}
                    </p>
                    <a href="/incidencias/delete/{{id}}" class="btn btn-danger">
                        Delete
                    </a>
                    <a href="/incidencias/edit/{{id}}" class="btn btn-secondary">
                        Edit
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay incidencias creadas</p>
                <a href="/incidencias/add">Crear incidencia</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>